# Set the default registry
registry=https://registry.npmjs.org/

# Directory for globally installed packages and binaries
prefix=${HOME}/.npm-global   # Change this to the directory of your choice

# Cache directory location
cache=${HOME}/.npm           # Change this to specify a different cache directory

# Whether to create a package-lock.json file
package-lock=true

# Save exact versions in package.json (no ^ or ~)
save-exact=false

# Show progress bar during installs
progress=true

# Set the log level
loglevel=notice              # Options: silent, error, warn, notice, http, timing, info, verbose, silly

# Production mode - install only dependencies, not devDependencies
production=false

# Enforce SSL certificate validation for HTTPS connections
strict-ssl=true

# Use global-style flat installation structure (minimal nesting)
global-style=false

# Enforce compatibility with engines specified in package.json
engine-strict=false
